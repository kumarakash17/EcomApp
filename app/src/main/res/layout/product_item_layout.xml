<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/user_product_name"
                android:text="Name"
                android:textColor="@color/green"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:textAlignment="center"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="10dp"
                android:id="@+id/product_image"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/user_product_description"
                android:text="Description"
                android:textColor="@color/green"
                android:textSize="20dp"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/user_product_price"
                android:layout_marginTop="10dp"
                android:text="Price"
                android:textSize="20dp"
                android:textColor="@color/green"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/user_product_weight"
                android:text="Weight"
                android:textColor="@color/green"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/user_product_duration"
                android:text="Estimated time"
                android:textColor="@color/green"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/user_product_usage"
                android:text="New or Used"
                android:textSize="20dp"
                android:textColor="@color/green"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/user_product_seller_id"
                android:text="Seller details"
                android:textSize="20dp"
                android:textColor="@color/green"
                android:textAlignment="center"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


