<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:background="@color/orange"
        android:text="Orders details"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:id="@+id/order_name"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Price"
            android:id="@+id/order_price"
            android:layout_below="@id/order_name"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:layout_below="@id/order_price"
            android:id="@+id/order_phone"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address,city"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:id="@+id/order_address"
            android:layout_below="@id/order_phone"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:text="Date ,time"
            android:id="@+id/order_date"
            android:layout_below="@id/order_address"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Show order details:"
            android:id="@+id/showOrderDetails"
            android:layout_margin="20dp"
            android:textAllCaps="false"
            android:layout_below="@id/order_date"/>
    </RelativeLayout>

</LinearLayout>