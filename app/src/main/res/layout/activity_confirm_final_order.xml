<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Buyer.ConfirmFinalOrderActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/skip_button"
                android:text="Please write your shipment Details:"
                android:textSize="22sp"
                android:layout_marginTop="20dp"
                android:layout_margin="20sp"
                android:textColor="@color/orange"
                android:id="@+id/textview"
                android:textStyle="bold"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textview"
                android:hint="Name"
                android:id="@+id/order_name"
                android:layout_margin="15sp"
                android:textColor="@color/green"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_name"
                android:hint=" Phone Number"
                android:inputType="phone"
                android:textSize="20dp"
                android:id="@+id/order_phone_number"
                android:layout_margin="15sp"
                android:textColor="@color/green"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_phone_number"
                android:id="@+id/order_address"
                android:layout_margin="15sp"
                android:hint="Address"
                android:textColor="@color/green"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_address"
                android:id="@+id/order_city"
                android:hint="City"
                android:layout_margin="15sp"
                android:textColor="@color/green"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_city"
                android:layout_margin="15sp"
                android:id="@+id/order_mail"
                android:inputType="textEmailAddress"
                android:hint="Enter your email id:"
                android:textColor="@color/green"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_mail"
                android:layout_margin="15sp"
                android:id="@+id/total_amount"
                android:inputType="textEmailAddress"
                android:text="Total amount:"
                android:textAlignment="center"
                android:textSize="22sp"
                android:textColor="@color/green"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/total_amount"
                android:background="@drawable/skip_button"
                android:id="@+id/confirm_order"
                android:textAllCaps="false"
                android:layout_margin="40dp"
                android:text="Confirm Order"/>

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>