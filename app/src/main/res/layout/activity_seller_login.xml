<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Sellers.SellerLoginActivity">
    <ImageView
        android:id="@+id/seller_image"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/seller_login" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seller Login"
        android:textSize="23dp"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_margin="16dp"/>

    <EditText
        android:layout_width="380dp"
        android:layout_marginLeft="15dp"
        android:layout_height="wrap_content"
        android:hint="  Email"
        android:inputType="textEmailAddress"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:id="@+id/seller_email_login"
        android:textColorHint="@color/orange"
        android:layout_below="@id/sellerRegistration"/>

    <EditText
        android:layout_width="380dp"
        android:layout_marginLeft="15dp"
        android:layout_height="wrap_content"
        android:hint="  Password"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        android:textSize="20sp"
        android:id="@+id/seller_password_login"
        android:textColorHint="@color/orange"
        android:layout_below="@id/sellerRegistration"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/seller_login_button"
        android:layout_margin="15dp"
        android:backgroundTint="@color/green"
        android:textSize="25dp"
        android:textStyle="normal"
        android:textAllCaps="false"/>


</LinearLayout>