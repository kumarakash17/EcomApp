<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sellers.SellerAddNewProductActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/addnewimage"
            android:layout_width="366dp"
            android:layout_height="253dp"
            android:layout_marginStart="15sp"
            android:layout_marginTop="15sp"
            android:layout_marginEnd="15sp"
            android:layout_marginBottom="15sp"
            android:src="@drawable/placehldrimage" />
        <EditText
            android:id="@+id/productname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="@drawable/skip_button"
            android:layout_margin="5dp"
            android:inputType="text"
            android:hint="Product Name"
            android:textColorHint="@color/orange"
            android:layout_below="@id/addnewimage"/>
        <EditText
            android:id="@+id/productdesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:inputType="textMultiLine"
            android:background="@drawable/skip_button"
            android:layout_margin="5dp"
            android:hint="Product description"
            android:textColorHint="@color/orange"
            android:layout_below="@id/productname"/>
        <EditText
            android:id="@+id/productprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_margin="5dp"
            android:hint="Product Price"
            android:inputType="number"
            android:background="@drawable/skip_button"
            android:textColorHint="@color/orange"
            android:layout_below="@id/productdesc"/>
        <EditText
            android:id="@+id/productweight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="@drawable/skip_button"
            android:layout_margin="5dp"
            android:hint="Product Weight"
            android:inputType="number"
            android:textColorHint="@color/orange"
            android:layout_below="@id/productprice"/>
        <EditText
            android:id="@+id/productduration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:inputType="number"
            android:layout_margin="5dp"
            android:background="@drawable/skip_button"
            android:hint="Estimated time for delivery"
            android:textColorHint="@color/orange"
            android:layout_below="@id/productweight"/>
        <EditText
            android:id="@+id/productusage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:inputType="text"
            android:layout_margin="5dp"
            android:background="@drawable/skip_button"
            android:hint="New or Used"
            android:textColorHint="@color/orange"
            android:layout_below="@id/productduration"/>

        <Button
            android:id="@+id/addNewProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:background="@drawable/skip_button"
            android:layout_marginTop="8dp"
            android:textAllCaps="false"
            android:text="Add Product" />


    </LinearLayout>

</ScrollView>